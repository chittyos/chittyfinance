# ChittyFinance Environment Configuration
# Copy to .env and populate with actual values

# Database (use Neon secrets or 1Password)
DATABASE_URL="postgresql://username:password@hostname/database"
NEON_DATABASE_URL="postgresql://username:password@hostname/database"

# API Keys (use 1Password CLI: op read "op://vault/item/field")
MERCURY_API_KEY="use_1password_cli"
WAVE_API_TOKEN="use_1password_cli" 
STRIPE_SECRET_KEY="use_1password_cli"
OPENAI_API_KEY="use_1password_cli"
OPENAI_MODEL="gpt-4o"
OPENAI_FALLBACK_MODEL="gpt-4o-mini"
OPENAI_ALLOW_FALLBACK_MODEL="false"
OPENAI_TEMPERATURE="0.2"
OPENAI_CONCISE="true"
OPENAI_MAX_TOKENS_ADVICE="320"
OPENAI_MAX_TOKENS_PLAN="560"
OPENAI_MAX_TOKENS_TREND="320"
OPENAI_WEEKLY_TOKEN_BUDGET="" # e.g., 200000 for ~200k tokens/week
OPENAI_BUDGET_WARN_PCT="0.8"
OPENAI_BUDGET_BLOCK_PCT="0.95"

# GitHub (optional; enables GitHub repo widgets)
GITHUB_TOKEN="use_1password_cli"

# Cloudflare (use Cloudflare secrets for Workers)
CLOUDFLARE_API_TOKEN="use_cloudflare_secrets"
CLOUDFLARE_ACCOUNT_ID="use_cloudflare_secrets"

# ChittyConnect (public URL of deployment)
CHITTY_CONNECT_URL="https://connect.chitty.cc"

# ChittyConnect API (for server-to-server calls)
CHITTYCONNECT_API_BASE="https://connect.chitty.cc/api"
CHITTYCONNECT_API_TOKEN="use_cloudflare_secrets"
CHITTYCONNECT_KEEPALIVE_MINUTES="50"

# ChittyRegister (registration entrypoint)
CHITTY_REGISTER_URL="https://get.chitty.cc"

# Application Settings
NODE_ENV="development"
PORT="3000"

# Instructions:
# 1. Use 1Password CLI: op read "op://Private/ChittyFinance API Keys/Mercury API Key"
# 2. Use Neon dashboard for DATABASE_URL
# 3. Use Cloudflare Workers secrets for production deployment
# App URLs
PUBLIC_APP_BASE_URL=https://finance.chitty.cc
API_BASE_URL=https://api.chitty.cc/finance

# Database
# Point to your Neon Postgres (ChittyOS-Core or ChittyLedger)
DATABASE_URL=

# ChittyConnect
CHITTY_CONNECT_VERIFY_URL=https://connect.chitty.cc/verify
CHITTY_CONNECT_AUDIENCE=finance
CHITTY_CONNECT_ISSUER=https://connect.chitty.cc
CHITTY_CONNECT_JWKS_URL=https://connect.chitty.cc/.well-known/jwks.json
# Used by the Worker to call backend
CHITTY_CONNECT_SERVICE_TOKEN=

# ChittyRegistry (service discovery)
CHITTY_REGISTRY_BASE=https://registry.chitty.cc

# Integrations / misc
MERCURY_WEBHOOK_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
OPENAI_API_KEY=
